<h2>Контакты</h2>

<form action="/contacts" method="POST">
	<div class="form-group">
    	<label>Введите ваше имя</label>
    	<input name="contact[name]" type="text" class="form-control" placeholder="Ваше имя" value="<%= @name %>">
  	</div>
	
	<div class="form-group">
    <label>Оставьте ваше сообщение</label>
    <textarea name="contact[comment]" class="form-control" rows="3" value="<%= @comment %>"></textarea>
  	</div>
	
	<button type="submit" class="btn btn-primary">Отправить</button>
	
</form>