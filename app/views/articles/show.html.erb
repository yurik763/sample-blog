<h1><%= @article.title %></h1>
<p><%= @article.text %></p>


<h2>Коментарий</h2>
<% @article.comments.each do |comment| %>
	<p>
	<i><%= comment.author %> сказал:</i><br />
	<%= comment.body %>
	</p>
	<hr />
<% end %>

<h2>Добавить комментарий</h2>
<p>
<%= form_for([@article, @article.comments.build]) do |f| %>

	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit 'Добавить комментарий' %>
<% end %>
</p>