<h1><%= @article.title %></h1>
<p><%= @article.text %></p>

<% @article.comments.each do |comment| %>
	<h4><%= comment.author %></h4>
	<p><%= comment.body %></p>
	<hr />
<% end %>

<p>
<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %><br />
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit 'Добавить комментарий' %>
<% end %>
</p>